#!/bin/bash
###########################################################
#
# Template
#
#
#
###########################################################

# Libraries
source ${HOME}/bin/libs/my_ps

###########################################################
#
# function help
#
#
#
###########################################################
function help () {
cat<<EOF
Usage:
EOF
}

###########################################################
#
# function main
#
#
#
###########################################################
function main () {

    while [ -n "$1" ] 
    do
	case $1 in
	    --debug) DEBUG="yes"; shift 1;;
	    *) help; exit;;
	esac
    done

    my_ps f | awk '!/awk/ && $0~var' var=${1:-".*"}
}

main $@
