# source ${HOME}/bin/libs/ask

###########################################################
#
# function help
#
#
#
###########################################################
function help () {
cat<<EOF
Usage:
EOF
}

###########################################################
#
# function replace
#
#
#
###########################################################
function replace_strings () {
sed 's/${FROM_STRING}/${TO_STRING}/g' ${FILE}
}



###########################################################
#
# function main
#
#
#
###########################################################
function main () {

    while [ -n "$1" ] 
    do
	case $1 in
	    --debug) DEBUG="yes"; shift 1;;
	    *) help; exit;;
	esac
    done
}

main "$@"
